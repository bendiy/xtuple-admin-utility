# -*- mode: nginx; mode: flyspell-prog;  ispell-current-dictionary: american -*-

## HTTP server.
server {
    listen 80;
    server_name {ENVIRONMENT}.{DOMAIN_ALIAS};
    limit_conn arbeit 32;

    access_log /var/log/nginx/{ENVIRONMENT}/access.log;
    error_log /var/log/nginx/{ENVIRONMENT}/error.log;
    root /opt/xtuple/commerce/{ENVIRONMENT}/drupal/core;

    auth_basic "Restricted";
    auth_basic_user_file /opt/xtuple/commerce/.htpasswd;

    include apps/drupal/security.conf;
    include apps/drupal/drupal.conf;
} # HTTP server
